    <!-- Modal لعرض التفاصيل -->
    <div class="modal detail-modal" id="detail-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">تفاصيل العنصر</h2>
                <button class="close-btn">&times;</button>
            </div>
            <div class="detail-header">
                <img id="detail-image" class="detail-image" src="" alt="">
                <h2 id="detail-title" class="detail-title"></h2>
            </div>
            <div class="detail-body">
                <div class="detail-section">
                    <h3 class="detail-section-title">معلومات عامة</h3>
                    <div class="detail-info">
                        <div class="detail-info-item">
                            <div class="detail-info-label">القسم</div>
                            <div id="detail-category"></div>
                        </div>
                        <div class="detail-info-item">
                            <div class="detail-info-label">الحالة</div>
                            <div id="detail-status"></div>
                        </div>
                        <div class="detail-info-item">
