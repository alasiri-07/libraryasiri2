                    <ul id="detail-moments" class="moments-list">
                        <!-- اللحظات ستضاف هنا -->
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" id="delete-item">حذف</button>
                <button class="btn btn-primary" id="edit-item">تعديل</button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // عناصر DOM
            const itemsContainer = document.getElementById('items-container');
            const addItemBtn = document.getElementById('add-item-btn');
            const addItemModal = document.getElementById('add-item-modal');
            const detailModal = document.getElementById('detail-modal');
            const closeModalBtns = document.querySelectorAll('.close-btn, #close-modal');
            const saveItemBtn = document.getElementById('save-item');
            const addItemForm = document.getElementById('add-item-form');
            const categoryBtns = document.querySelectorAll('.category-btn');
            const searchInput = document.getElementById('search-input');
            const addMomentBtn = document.getElementById('add-moment-btn');
            const momentsContainer = document.getElementById('moments-container');
            const deleteItemBtn = document.getElementById('delete-item');
            const editItemBtn = document.getElementById('edit-item');
            
            // بيانات التطبيق
            let mediaItems = JSON.parse(localStorage.getItem('mediaItems')) || [];
            let currentCategory = 'all';
            let currentItemId = null;
            
            // تهيئة التطبيق
            function initApp() {
                renderItems();
                setupEventListeners();
            }
            
            // إعداد مستمعي الأحداث
            function setupEventListeners() {
                // فتح وإغلاق النماذج
                addItemBtn.addEventListener('click', () => openModal(addItemModal));
                closeModalBtns.forEach(btn => {
                    btn.addEventListener('click', () => closeAllModals());
                });
                
                // حفظ العنصر الجديد
                saveItemBtn.addEventListener('click', saveItem);
                
                // التصنيفات والبحث
                categoryBtns.forEach(btn => {
                    btn.addEventListener('click', () => {
                        categoryBtns.forEach(b => b.classList.remove('active'));
                        btn.classList.add('active');
                        currentCategory = btn.dataset.category;
                        renderItems();
                    });
                });
                
                searchInput.addEventListener('input', renderItems);
                
                // إضافة لحظات
                addMomentBtn.addEventListener('click', addMomentField);
                
                // حذف وتعديل العناصر
                deleteItemBtn.addEventListener('click', deleteCurrentItem);
                editItemBtn.addEventListener('click', editCurrentItem);
            }
            
            // عرض العناصر
            function renderItems() {
                const searchTerm = searchInput.value.toLowerCase();
                let filteredItems = mediaItems;
                
                if (currentCategory !== 'all') {
                    filteredItems = filteredItems.filter(item => item.category === currentCategory);
                }
                
                if (searchTerm) {
                    filteredItems = filteredItems.filter(item => 
                        item.name.toLowerCase().includes(searchTerm) || 
                        item.description.toLowerCase().includes(searchTerm)
                    );
                }
                
                itemsContainer.innerHTML = '';
                
                if (filteredItems.length === 0) {
                    itemsContainer.innerHTML = `
                        <div style="grid-column: 1 / -1; text-align: center; padding: 2rem; color: #6c757d;">
                            <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 1rem;"></i>
                            <p>لا توجد عناصر في هذه القائمة</p>
                        </div>
                    `;
                    return;
                }
                
                filteredItems.forEach(item => {
                    const statusClass = getStatusClass(item.status);
                    const statusText = getStatusText(item.status);
                    
                    const itemElement = document.createElement('div');
                    itemElement.className = 'item-card';
                    itemElement.innerHTML = `
                        <img src="${item.image || 'https://via.placeholder.com/300x180?text=صورة+العمل'}" alt="${item.name}" class="item-image">
                        <div class="item-details">
                            <h3 class="item-title">${item.name}</h3>
                            <span class="item-status ${statusClass}">${statusText}</span>
                            <p class="item-progress">${item.progress || 'لا يوجد تقدم مسجل'}</p>
                            <div class="item-rating">
                                ${generateRatingStars(item.rating)}
                                ${item.rating ? `<span>${item.rating}/10</span>` : '<span>لا يوجد تقييم</span>'}
                            </div>
                        </div>
                    `;
                    
                    itemElement.addEventListener('click', () => openItemDetail(item.id));
                    itemsContainer.appendChild(itemElement);
                });
            }
            
            // فتح تفاصيل العنصر
            function openItemDetail(itemId) {
                const item = mediaItems.find(i => i.id === itemId);
                if (!item) return;
                
                currentItemId = itemId;
                
                // تعبئة البيانات في نموذج التفاصيل
                document.getElementById('detail-title').textContent = item.name;
                document.getElementById('detail-image').src = item.image || 'https://via.placeholder.com/700x250?text=صورة+العمل';
                document.getElementById('detail-category').textContent = getCategoryText(item.category);
                document.getElementById('detail-status').textContent = getStatusText(item.status);
                document.getElementById('detail-progress').textContent = item.progress || 'لا يوجد';
                document.getElementById('detail-rating').textContent = item.rating ? `${item.rating}/10` : 'لا يوجد';
                document.getElementById('detail-description').textContent = item.description || 'لا يوجد وصف';
                
                // عرض اللحظات المهمة
                const momentsList = document.getElementById('detail-moments');
                momentsList.innerHTML = '';
                
                if (item.moments && item.moments.length > 0) {
                    item.moments.forEach(moment => {
                        const li = document.createElement('li');
                        li.className = 'moment-item';
                        li.innerHTML = `
                            <div class="moment-chapter">${moment.chapter}</div>
                            <div class="moment-note">${moment.note}</div>
                        `;
                        momentsList.appendChild(li);
                    });
                } else {
                    momentsList.innerHTML = '<li>لا توجد لحظات مسجلة</li>';
                }
                
                openModal(detailModal);
            }
            
            // فتح النموذج
            function openModal(modal) {
                closeAllModals();
                modal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            }
            
            // إغلاق جميع النماذج
            function closeAllModals() {
                document.querySelectorAll('.modal').forEach(modal => {
                    modal.style.display = 'none';
                });
                document.body.style.overflow = 'auto';
                addItemForm.reset();
                momentsContainer.innerHTML = '';
                currentItemId = null;
            }
            
            // حفظ العنصر
            function saveItem() {
                const name = document.getElementById('item-name').value;
                const category = document.getElementById('item-category').value;
                const status = document.getElementById('item-status').value;
                const progress = document.getElementById('item-progress').value;
                const image = document.getElementById('item-image').value;
                const description = document.getElementById('item-description').value;
                const rating = document.getElementById('item-rating').value;
                
                if (!name) {
                    alert('يرجى إدخال اسم العمل');
                    return;
                }
                
                // جمع اللحظات المهمة
                const moments = [];
                const momentInputs = momentsContainer.querySelectorAll('.moment-input');
                momentInputs.forEach(input => {
                    const chapter = input.querySelector('.moment-chapter').value;
                    const note = input.querySelector('.moment-note').value;
                    if (chapter || note) {
                        moments.push({ chapter, note });
                    }
                });
                
                const newItem = {
                    id: currentItemId || Date.now().toString(),
                    name,
                    category,
                    status,
                    progress,
                    image,
                    description,
                    rating: rating ? parseFloat(rating) : null,
                    moments
                };
                
                if (currentItemId) {
                    // تعديل العنصر الحالي
                    const index = mediaItems.findIndex(item => item.id === currentItemId);
                    if (index !== -1) {
                        mediaItems[index] = newItem;
                    }
                } else {
                    // إضافة عنصر جديد
                    mediaItems.push(newItem);
                }
                
                // حفظ في localStorage
                localStorage.setItem('mediaItems', JSON.stringify(mediaItems));
                
                // إعادة عرض العناصر وإغلاق النموذج
                renderItems();
                closeAllModals();
            }
            
            // إضافة حقل لحظة جديدة
            function addMomentField() {
                const momentDiv = document.createElement('div');
                momentDiv.className = 'moment-input';
                momentDiv.innerHTML = `
                    <div style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem;">
                        <input type="text" class="form-control moment-chapter" placeholder="الفصل أو اللحظة">
                        <button type="button" class="btn btn-danger remove-moment">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <textarea class="form-control moment-note" placeholder="ملاحظاتك عن هذه اللحظة" rows="2"></textarea>
                `;
                
                momentDiv.querySelector('.remove-moment').addEventListener('click', () => {
                    momentsContainer.removeChild(momentDiv);
                });
                
                momentsContainer.appendChild(momentDiv);
            }
            
            // حذف العنصر الحالي
            function deleteCurrentItem() {
                if (!currentItemId) return;
                
                if (confirm('هل أنت متأكد من أنك تريد حذف هذا العنصر؟')) {
                    mediaItems = mediaItems.filter(item => item.id !== currentItemId);
                    localStorage.setItem('mediaItems', JSON.stringify(mediaItems));
                    renderItems();
                    closeAllModals();
                }
            }
            
            // تعديل العنصر الحالي
            function editCurrentItem() {
                if (!currentItemId) return;
                
                const item = mediaItems.find(i => i.id === currentItemId);
                if (!item) return;
                
                // تعبئة النموذج ببيانات العنصر
                document.getElementById('item-name').value = item.name;
                document.getElementById('item-category').value = item.category;
                document.getElementById('item-status').value = item.status;
                document.getElementById('item-progress').value = item.progress || '';
                document.getElementById('item-image').value = item.image || '';
                document.getElementById('item-description').value = item.description || '';
                document.getElementById('item-rating').value = item.rating || '';
                
                // تعبئة اللحظات المهمة
                momentsContainer.innerHTML = '';
                if (item.moments && item.moments.length > 0) {
                    item.moments.forEach(moment => {
                        const momentDiv = document.createElement('div');
                        momentDiv.className = 'moment-input';
                        momentDiv.innerHTML = `
                            <div style="display: flex; gap: 0.5rem; margin-bottom: 0.5rem;">
                                <input type="text" class="form-control moment-chapter" placeholder="الفصل أو اللحظة" value="${moment.chapter || ''}">
                                <button type="button" class="btn btn-danger remove-moment">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <textarea class="form-control moment-note" placeholder="ملاحظاتك عن هذه اللحظة" rows="2">${moment.note || ''}</textarea>
                        `;
                        
                        momentDiv.querySelector('.remove-moment').addEventListener('click', () => {
                            momentsContainer.removeChild(momentDiv);
                        });
                        
                        momentsContainer.appendChild(momentDiv);
                    });
                }
                
                // الانتقال إلى نموذج الإضافة/التعديل
                closeAllModals();
                openModal(addItemModal);
            }
            
            // وظائف مساعدة
            function getStatusClass(status) {
                switch(status) {
                    case 'ongoing': return 'status-ongoing';
                    case 'completed': return 'status-completed';
                    case 'dropped': return 'status-dropped';
                    default: return '';
                }
            }
            
            function getStatusText(status) {
                switch(status) {
                    case 'watching': return 'أخطط للمشاهدة';
                    case 'ongoing': return 'جاري المشاهدة';
                    case 'completed': return 'مكتمل';
                    case 'paused': return 'متوقف';
                    case 'dropped': return 'متروك';
                    default: return status;
                }
            }
            
            function getCategoryText(category) {
                switch(category) {
                    case 'novel': return 'رواية';
                    case 'manga': return 'مانجا/مانهوا';
                    case 'anime': return 'انمي';
                    case 'movie': return 'فيلم';
                    case 'series': return 'مسلسل';
                    case 'book': return 'كتاب';
                    case 'other': return 'أخرى';
                    default: return category;
                }
            }
            
            function generateRatingStars(rating) {
                if (!rating) return '';
                
                let stars = '';
                const fullStars = Math.floor(rating / 2);
                const halfStar = rating % 2 >= 1;
                
                for (let i = 0; i < 5; i++) {
                    if (i < fullStars) {
                        stars += '<i class="fas fa-star"></i>';
                    } else if (i === fullStars && halfStar) {
                        stars += '<i class="fas fa-star-half-alt"></i>';
                    } else {
                        stars += '<i class="far fa-star"></i>';
                    }
                }
                
                return stars;
            }
            
            // بدء التطبيق
            initApp();
        });
    </script>
</body>
</html>
