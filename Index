    <button class="add-btn" id="add-item-btn">
        <i class="fas fa-plus"></i>
    </button>

    <!-- Modal لإضافة عنصر جديد -->
    <div class="modal" id="add-item-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">إضافة عنصر جديد</h2>
                <button class="close-btn">&times;</button>
            </div>
            <div class="modal-body">
                <form id="add-item-form">
                    <div class="form-group">
                        <label for="item-name" class="form-label">اسم العمل</label>
                        <input type="text" id="item-name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="item-category" class="form-label">القسم</label>
                        <select id="item-category" class="form-select" required>
                            <option value="novel">رواية</option>
